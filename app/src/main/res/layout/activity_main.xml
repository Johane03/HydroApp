<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".weather_Main_Activity">

    <TextView
        android:id="@+id/contentPanel"
        android:layout_width="350dp"
        android:layout_height="248dp"
        android:layout_above="@id/Dashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="73dp"
        android:background="#68E5A9"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:text="@string/menu_text"
        android:textAlignment="center"
        android:textSize="12pt"
        android:alpha="0.9"/>

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:foreground="@drawable/logo" />

    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="openLogin"
        android:text="@string/button_login"
        android:textSize="10pt" />

    <Button
        android:id="@+id/Dashboard"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="openDashboard"
        android:text="@string/button_dashboard"
        android:textSize="10pt" />

    <Button
        android:id="@+id/Weather"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Dashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="openWeather"
        android:text="@string/button_weather"
        android:textSize="10pt" />

    <Button
        android:id="@+id/AboutUs"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Weather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="openAbout"
        android:text="@string/button_about"
        android:textSize="10pt" />

    <Button
        android:id="@+id/Help"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/AboutUs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="openHelp"
        android:text="@string/button_help"
        android:textSize="10pt" />
</RelativeLayout>